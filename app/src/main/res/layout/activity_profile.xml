<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0D0C0C"
    tools:context="com.example.mohitsharma.chatapp.ProfileActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Users_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/freinds_request_button"
        android:layout_marginTop="14dp"
        android:background="#FF0D0C0C"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/users_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_below="@+id/Users_profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:textSize="25dp"
        android:text="Display Name" />

    <TextView
        android:id="@+id/user_profile_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/users_display_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="current user status"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/Users_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_profile_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:text="Total Friends"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/freinds_request_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#FF8416D2"
        android:textColor="#ffffff"
        android:layout_below="@+id/Users_friends"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="SEND FRIENDS REQUEST" />

    <Button
        android:id="@+id/Decline_request"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#FF8416D2"
        android:textColor="#ffffff"
        android:layout_below="@+id/freinds_request_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Decline Request" />


</RelativeLayout>
